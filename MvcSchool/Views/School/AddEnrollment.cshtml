
@model MvcSchool.Models.AddEnrollmentViewModel

<h2>Add Enrollment</h2>
<form class="mt-3" method="post" action="AddEnrollment">
    <div class="form-group mb-3">
        <label asp-for="StudentName" class="control-label">Student Name</label>
        @Html.DropDownListFor(model => model.StudentName, new SelectList(Model.StudentName)
        , new { @class = "form-select", @id = "NameSelect" })
     </div>
     
    <div class="form-group mb-3">
        <label asp-for="ClassName" class="control-label"> Class Name</label>
        @Html.DropDownListFor(model => model.ClassName, new SelectList(Model.ClassName)
        , new { @class = "form-select", @id = "NameSelect" })
     </div>

    <div class="mb-3">
        
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Done" asp-for="PaymentStautus" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Done
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="Pending" asp-for="PaymentStautus" id="flexCheckChecked">
            <label class="form-check-label" for="flexCheckChecked">
                Pending
            </label>
        </div>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Payment Deadline</label>
        <input type="date" class="form-control" asp-for="PaymentDeadline">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Created Date</label>
        <input type="date" class="form-control" asp-for="CreatedDate">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Created By</label>
        <input type="text" class="form-control" asp-for="CreatedBy">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
